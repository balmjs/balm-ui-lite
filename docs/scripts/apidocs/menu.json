{
  "props": [
    {
      "name": "dropdownId",
      "type": "String",
      "default": "(required)",
      "description": "下拉菜单按钮唯一ID"
    },
    {
      "name": "menu",
      "type": "Array",
      "default": "[]",
      "description": "菜单内容"
    },
    {
      "name": "noRipple",
      "type": "Boolean",
      "default": "false",
      "description": "无波纹效果"
    },
    {
      "name": "position",
      "type": "Number, String",
      "default": "0",
      "description":
        "下拉菜单相对触发按钮的位置 { 1: 'top-left', 2: 'top-right', 3: 'bottom-left', 4: 'bottom-right' }"
    }
  ],
  "slots": [
    {
      "name": "(default)",
      "description": "默认插槽可以插入菜单子组件"
    }
  ],
  "events": [
    {
      "name": "selected",
      "type": "Function(menuitem: object)",
      "description":
        "选中菜单项时触发事件（仅限非自定义菜单下有效，返回菜单项对象）"
    }
  ],
  "sass": [
    {
      "var": "$default-dropdown-bg-color",
      "description": "下拉菜单的背景色"
    }
  ]
}
