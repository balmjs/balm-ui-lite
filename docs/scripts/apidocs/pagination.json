{
  "props": [{
      "name": "page (v-model)",
      "type": "Number",
      "default": 1,
      "description": "当前页数"
    },
    {
      "name": "recordCount",
      "type": "Number",
      "default": "(required)",
      "description": "数据总数",
      "required": true
    },
    {
      "name": "pageSize",
      "type": "Number",
      "default": "(required)",
      "description": "每页条数",
      "required": true
    },
    {
      "name": "prev",
      "type": "String",
      "default": "",
      "description": "上一页"
    },
    {
      "name": "next",
      "type": "String",
      "default": "",
      "description": "下一页"
    },
    {
      "name": "pageSpan",
      "type": "Number",
      "default": 3,
      "description": "分页跨度"
    },
    {
      "name": "showRecord",
      "type": "Boolean",
      "default": false,
      "description": "显示分页记录"
    },
    {
      "name": "showJumper",
      "type": "Boolean",
      "default": false,
      "description": "显示跳转信息"
    },
    {
      "name": "jumperBefore",
      "type": "String",
      "default": "'Goto'",
      "description": ""
    },
    {
      "name": "jumperAfter",
      "type": "String",
      "default": "",
      "description": ""
    },
    {
      "name": "jumperButton",
      "type": "String",
      "default": "",
      "description": ""
    },
    {
      "name": "position",
      "type": "String",
      "default": "",
      "description": "分页对齐方式（'left' 或 'right'）"
    },
    {
      "name": "mini",
      "type": "Boolean",
      "default": false,
      "description": "使用极简模式"
    }
  ],
  "slots": [{
    "name": "(default)",
    "description": "默认插槽可以插入分页额外内容",
    "props": "{ recordCount, pageSize, pageCount }"
  }],
  "events": [{
    "name": "change",
    "type": "Function(newPage: number)",
    "description": "切换分页事件"
  }],
  "sass": [{
      "var": "$pagination-color",
      "description": "分页的颜色"
    },
    {
      "var": "$pagination-border-color",
      "description": "分页边框的颜色"
    },
    {
      "var": "$pagination-bg-color",
      "description": "分页的背景色"
    },
    {
      "var": "$pagination-hover-color",
      "description": "分页鼠标经过时的颜色"
    },
    {
      "var": "$pagination-hover-border-color",
      "description": "分页 hover 边框的颜色"
    },
    {
      "var": "$pagination-hover-bg-color",
      "description": "分页鼠标经过时的背景色"
    },
    {
      "var": "$pagination-active-color",
      "description": "当前分页的颜色"
    },
    {
      "var": "$pagination-active-border-color",
      "description": "当前分页边框的颜色"
    },
    {
      "var": "$pagination-active-bg-color",
      "description": "当前分页的背景色"
    }
  ]
}
